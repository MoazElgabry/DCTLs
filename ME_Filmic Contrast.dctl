DEFINE_UI_PARAMS(bypass_contrast, â€€â€€â€€â¤· Contrast ðŸŒ“, DCTLUI_CHECK_BOX, 0)
DEFINE_UI_PARAMS(bypass_splittone, â€€â€€â€€â¤· Split toning ðŸ”°, DCTLUI_CHECK_BOX, 0)
DEFINE_UI_PARAMS(opt_showcurve, ðŸ“ˆ Show Curve, DCTLUI_CHECK_BOX, 0)
